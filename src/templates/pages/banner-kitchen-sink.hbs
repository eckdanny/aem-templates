<script type="text/javascript">
  (function() { 'use strict';

    // On DOM Ready
    $(function() {

      // Register Event Handlers
      $(window)
        .on('resize', onResizeThrottled)
        .trigger('resize');

      // $('[data-rds]').rds({
      //   propertyName: "a custom value"
      // });

      $('#rds-update')
        .click(function(e) {
          $('#rds-field')
            .text( $(this).prev().val() )
            .show();
        });

    });

    var onResize = function(e) {
      console.log('I was resized');
      if (Foundation.utils.is_small_only()) {
        console.log('to a small viewport');
      }
    };
    var onResizeThrottled = Foundation.utils.throttle(onResize, 500);

  })();
</script>

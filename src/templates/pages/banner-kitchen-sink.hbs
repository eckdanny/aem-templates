<!-- RDS -->
<div class="row">
  <h3>Dynamic Injection (RDS)</h3>
  <div class="column medium-6">

    <form>
      <div class="row">
        <div class="small-8 columns">
          <div class="row">
            <div class="small-3 columns">
              <label
                for="rds"
                class="right inline"
              >RDS:</label>
            </div>
            <div class="small-9 columns">
              <input
                value="1.99"
                type="text"
                min="0.5"
                max="2.5"
                step="0.01"
                style="
                  display: inline-block;
                  width: 75px;
                "
              >
              <button
                class="button tiny"
                type="button"
                id="rds-update"
              >Update RDS</button>
            </div>
          </div>
        </div>
      </div>
    </form>
  </div>
</div>

